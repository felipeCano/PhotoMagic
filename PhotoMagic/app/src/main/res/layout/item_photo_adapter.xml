<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_photo_container"
    android:layout_width="170dp"
    android:layout_height="330dp"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="330dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="330dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/photo_item"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        app:zoomage_zoomable="true"
        app:zoomage_autoCenter="true"
        app:zoomage_minScale="0.6"
        app:zoomage_maxScale="8"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:text="TextView" />

</RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorggray">

                </View>

                <Button
                    android:id="@+id/buttonDeletePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_efect"
                    android:textColor="@color/com_facebook_blue"

                    android:text="@string/btn_delete_imagen" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorggray">

                </View>
                <Button
                    android:id="@+id/buttonSharePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_efect"
                    android:textColor="@color/com_facebook_blue"
                    android:text="@string/btn_share_imagen" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorggray">

                </View>
                <Button
                    android:id="@+id/buttonSaveLocal"
                    android:layout_width="match_parent"
                    android:background="@drawable/ripple_efect"
                    android:textColor="@color/com_facebook_blue"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_save_local" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorggray">

                </View>


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</FrameLayout>