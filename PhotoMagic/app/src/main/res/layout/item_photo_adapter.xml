<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_photo_container"
    android:layout_width="170dp"
    android:layout_height="260dp"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="260dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="260dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/photo_item"
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="9dp"
                    android:text="TextView" />

                <Button
                    android:id="@+id/buttonDeletePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/neutral_white"
                    android:textColor="@color/com_facebook_blue"
                    android:layout_marginTop="15dp"
                    android:text="@string/btn_delete_imagen" />

                <Button
                    android:id="@+id/buttonSharePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/neutral_white"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/com_facebook_blue"
                    android:text="@string/btn_share_imagen" />

                <Button
                    android:id="@+id/buttonSaveLocal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@color/neutral_white"
                    android:textColor="@color/com_facebook_blue"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_save_local" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</FrameLayout>